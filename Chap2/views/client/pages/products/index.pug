extends ../../layouts/default.pug
include ../../minxins/box-head
block main
  .container.my-3 
    .row  
      .col-12 
        +box-head("Danh sach san pham") 
          
    .row 
      each product in products
        .col-3.mb-3   
          .product-item 
              .inner-image 
                img(src=product.thumbnail, alt="")
              .inner-content 
                h3.inner-title #{product.title}
                .inner-price-new #{product.priceNew}
                .inner-price-old #{product.price}
                .inner-discount -#{product.discountPercentage}%
