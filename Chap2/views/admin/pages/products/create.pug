extends ../../layouts/default.pug

block main 
  h1(class="mb-4") Thêm mới sản phẩm 

  form(
    action=`${prefixAdmin}/products/create`
    id="form-create-product"
    method="POST"
  )
    div(class="form-control")
      label(for="title") Tên sản phẩm:
        input(
          type="text"
          class="form-control"        
          id="title"
          name="title"
          required
        )
    div(class="form-control")
      label(for="desc") Mô tả:
        input(
          type="text"
          class="form-control"
          id="desc"
          name="description"
          rows="5"
        )
    div(class="form-control")
      label(for="price") Giá sản phẩm:
        input(
          type="number"
          class="form-control"         
          id="price"
          name="price"
          value="0"
          min="0"
          required
        )
    div(class="form-control")
      label(for="price") Giảm giá sản phẩm %:
        input(
          type="number"
          class="form-control"
          id="discount"
          name="discountPercentage"
          value="0"
          min="0"  
        )
    div(class="form-control")
      label(for="stock") Số lượng:
        input(
          type="number"
          class="form-control"
          id="stock"
          name="stock"
          value="0"
          min="0"
        )
    div(class="form-control")
      label(for="thumbnail") Ảnh sản phẩm:
        input(
          type="text"
          class="form-control"        
          id="thumbnail"
          name="thumbnail"
          required
        )
    div(class="form-control")
      label(for="position") Vị trí:
        input(
          type="number"
          class="form-control"        
          id="position"
          name="position"
          placeholder="Tự động tăng"
          min="1"
        )
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusActive"
        name="status"
        value="active"
        checked
      )
      label(for="statusActive" class="form-check-lable") Hoạt động
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusInactive"
        name="status"
        value="inactive"
      )
      label(for="statusInactive" class="form-check-label") Không hoạt động 
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Tạo mới
    
    

  script(src="/admin/js/product.js") 

   